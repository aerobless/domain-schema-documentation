    <link rel=stylesheet href=https://cdn.jsdelivr.net/npm/pretty-print-json@3.0/dist/css/pretty-print-json.css>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <meta name="theme-color" content="#7952b3">
    <style>
    .alert ul {
      margin-bottom: 0;
    }
    #mySvgId {
      height: 100%;
      width: 100%;
    }
    #mermaid{
      height: 300px;
      border: 1px solid #000;
    }
    section {
      margin-bottom: 50px;
    }
    .title-badge {
      font-size: 0.3em;
      vertical-align: top;
    }
    .json {
      border: 1px solid black;
      background-color: lightgray;
      padding: 10px;
     }
    </style>
  </head>
  <body>
    <main class="container">
      {{{content}}}
    </main>
    <script src="https://cdn.jsdelivr.net/npm/svg-pan-zoom@3.5.0/dist/svg-pan-zoom.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/pretty-print-json@3.0/dist/pretty-print-json.min.js"></script>
    <script type="module">
      import mermaid from 'https://cdn.jsdelivr.net/npm/mermaid@10/dist/mermaid.esm.min.mjs';
      mermaid.initialize({ startOnLoad: false });
      const drawDiagram = async function () {
        const element = document.querySelector('#mermaid');
        const graphDefinition = element.innerText;
        const { svg } = await mermaid.render('mySvgId', graphDefinition);
        //element.innerHTML = svg;
        element.innerHTML = svg.replace(/[ ]*max-width:[ 0-9\.]*px;/i , '');
        svgPanZoom('#mySvgId', {
          zoomEnabled: true,
          controlIconsEnabled: true,
          fit: true,
          center: true
        })
      };
      await drawDiagram();

      const elements = document.querySelectorAll('.json');
      for(const element of elements) {
        console.log(element.innerText);
        element.innerHTML = prettyPrintJson.toHtml(JSON.parse(element.innerText));
      }
      //
    </script>
  </body>
