<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item active" aria-current="page">Application</li>
  </ol>
</nav>

<h1>{{{title}}}</h1>

{{#if x-todos}}
<div class="alert alert-danger" role="alert">
  <ul>
{{#each x-todos}}
    <li>{{this}}</li>
{{/each}}
  </ul>
</div>
{{/if}}

<section>
  <p>{{description}}</p>
</section>

{{#if modules}}
<section>
  <h2>Modules</h2>
{{#if classDiagram}}
  <div class="mermaid">
    <pre class="mermaidDefinition">
      classDiagram
      {{{classDiagram}}}
    </pre>
  </div>
{{/if}}
  <table class="table">
    <thead>
      <tr>
        <th>Name</th>
        <th>Description</th>
      </tr>
    </thead>
    <tbody>
{{#each modules}}
      <tr>
        <td><a href=".{{$id}}/index.html">{{title}}</a></td>
        <td>{{description}}</td>
      </tr>
{{/each}}
    </tbody>
  </table>
</section>
{{/if}}

{{#if x-links}}
<section>
  <h2>Links</h2>
  <ul>
{{#each x-links}}
    <li><a href="{{href}}">{{text}}</a></li>
{{/each}}
  </ul>
</section>
{{/if}}
