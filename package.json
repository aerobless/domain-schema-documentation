{
  "name": "domain-schema-documentation",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "generate": "tsx --watch --watch-path=./input --watch-path=./src src/main.ts",
    "lint": "eslint --fix src/**/*.ts",
    "test": "jest --watch",
    "generate:ci": "tsx src/main.ts",
